<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/img"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="16dp" />

    <ImageButton
        android:id="@+id/arrowdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="588dp"
        android:contentDescription="This is a downward arrow button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/arrow"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/combinePDF"
        android:layout_width="79dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="584dp"
        android:contentDescription="combine psd button"
        app:layout_constraintStart_toEndOf="@+id/arrowdown"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/combinepdf"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/addNote"
        android:layout_width="73dp"
        android:layout_height="89dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="580dp"
        android:contentDescription="Add note button"
        app:layout_constraintStart_toEndOf="@+id/combinePDF"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/add"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="588dp"
        android:contentDescription="search button"
        app:layout_constraintStart_toEndOf="@+id/addNote"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/search"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/template"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="588dp"
        android:contentDescription="template button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toEndOf="@+id/search"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/template"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>