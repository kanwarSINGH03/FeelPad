<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/title_image_view"
        app:srcCompat="@drawable/img"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/noteListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@color/dark_gray"
        android:dividerHeight="3dp"
        android:padding="@dimen/cardview_default_radius"
        app:layout_constraintBottom_toTopOf="@id/mainMenuLayout"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        tools:listitem="@layout/note_cell" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_allignParentBottom="true">

        <ImageButton
            android:id="@+id/arrowdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="588dp"
            android:contentDescription="@string/this_is_a_downward_arrow_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.021"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/arrow"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/combinePDF"
            android:layout_width="79dp"
            android:layout_height="75dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="584dp"
            android:contentDescription="@string/combine_psd_button"
            app:layout_constraintStart_toEndOf="@+id/arrowdown"
            app:srcCompat="@drawable/combinepdf"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/addNote"
            android:layout_width="73dp"
            android:layout_height="89dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="580dp"
            android:contentDescription="@string/add_note_button"
            app:layout_constraintStart_toEndOf="@+id/combinePDF"
            app:srcCompat="@drawable/add"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="588dp"
            android:contentDescription="@string/search_button"
            app:layout_constraintStart_toEndOf="@+id/addNote"
            app:srcCompat="@drawable/search"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="588dp"
            android:contentDescription="@string/template_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.785"
            app:layout_constraintStart_toEndOf="@+id/search"
            app:srcCompat="@drawable/template"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>