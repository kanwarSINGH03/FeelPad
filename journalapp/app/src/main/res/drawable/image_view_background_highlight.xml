<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#BDBDBD"/> <!-- Background color for highlighted state -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent inner part -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>